# Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ========================================
# SECURITY (CRITICAL: Generate secure values)
# ========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_generate_with_openssl_rand_hex_32

# GLM API Key (Get from https://z.ai/)
GLM_API_KEY=your_glm_api_key_from_zai_here

# ========================================
# DATABASE
# ========================================
POSTGRES_USER=raguser
POSTGRES_PASSWORD=CHANGE_THIS_secure_postgres_password
POSTGRES_DB=rag_metadata

# ========================================
# MINIO (Object Storage)
# ========================================
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Production MinIO credentials (different from dev)
# MINIO_ACCESS_KEY=CHANGE_THIS_production_minio_key
# MINIO_SECRET_KEY=CHANGE_THIS_production_minio_secret

# ========================================
# REDIS
# ========================================
REDIS_PASSWORD=  # Leave empty for development
# REDIS_PASSWORD=CHANGE_THIS_secure_redis_password  # Production

# ========================================
# OLLAMA (LLM Server)
# ========================================
OLLAMA_MODEL=qwen2.5:14b-instruct-q4_K_M
# OLLAMA_MODEL=qwen3:4b  # Development option (smaller model)

# ========================================
# GPU
# ========================================
CUDA_VISIBLE_DEVICES=0

# ========================================
# USER/GROUP (Linux file permissions)
# ========================================
UID=1001
GID=1001

# ========================================
# MONITORING (Production)
# ========================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_grafana_password

# ========================================
# NOTES
# ========================================
# 1. Never commit .env to version control
# 2. Use different values for development/production
# 3. Rotate secrets regularly
# 4. Use strong random values (32+ characters)
